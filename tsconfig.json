{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2018"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "target": "ES2018",
    "jsx": "preserve",
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "removeComments": true,
    "noEmit": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}